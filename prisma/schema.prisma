// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // Mac kullandığın için bunu eklemen performansı artırır ve hata riskini azaltır:
  binaryTargets = ["native", "darwin", "darwin-arm64"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- ENUMS ---

enum UserRole {
  USER
  ADMIN
}

enum UserRank {
  PAWN
  KNIGHT
  BISHOP
  ROOK
  QUEEN
  KING
}

enum AnimeStatus {
  AIRING
  FINISHED
  UPCOMING
  NOT_YET_AIRED
}

enum AnimeType {
  TV
  MOVIE
  OVA
  ONA
  SPECIAL
  UNKNOWN
}

enum NotificationType {
  SYSTEM
  RANK_UP
  ANIME_UPDATE
  ADMIN_ALERT
}

// --- AUTHENTICATION MODELS (NextAuth Standard) ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- CORE USER MODEL ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Optional: For Credentials provider if used alongside OAuth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Gamification & Roles
  role          UserRole  @default(USER)
  rank          UserRank  @default(PAWN)
  xp            Int       @default(0)
  level         Int       @default(1)

  // Relationships
  accounts      Account[]
  sessions      Session[]
  watchlist     WatchList[]
  favorites     Favorite[]
  watchHistory  WatchHistory[]
  comments      Comment[]
  notifications Notification[]
}

// --- ANIME CONTENT MODELS ---

model Anime {
  id          String      @id @default(cuid())
  anilistId   Int?        @unique // Sync key
  title       String
  description String      @db.Text
  imageUrl    String      // Poster URL
  coverUrl    String?     // Banner URL
  
  type        AnimeType   @default(TV)
  status      AnimeStatus @default(FINISHED)
  rating      Float       @default(0)
  year        Int?
  duration    String?     
  studio      String?     // Added Studio field
  sub         Int         @default(0) // Sub count
  dub         Int         @default(0) // Dub count
  
  episodes    Episode[]
  tags        Genre[]     
  
  // Relationships
  watchList    WatchList[]
  favorites    Favorite[]
  watchHistory WatchHistory[]
  heroSlides   HeroSlide[]
  comments     Comment[]   // Linked comments directly to Anime
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Episode {
  id              String   @id @default(cuid())
  animeId         String
  anime           Anime    @relation(fields: [animeId], references: [id], onDelete: Cascade)
  
  number          Int
  title           String
  description     String?
  image           String?
  isFiller        Boolean  @default(false)
  
  // Source Management
  providerId      String?  
  seasonNumber    Int      @default(1)
  
  // Manual Overrides
  useManualSource Boolean  @default(false)
  manualSourceUrl String?  
  sourceType      String?  // "HLS", "MP4", "EMBED"

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([animeId, number])
  @@index([animeId])
}

model Genre {
  id     String  @id @default(cuid())
  name   String  @unique
  animes Anime[]
}

// --- CONTENT CURATION ---

model HeroSlide {
  id          String   @id @default(cuid())
  animeId     String
  anime       Anime    @relation(fields: [animeId], references: [id], onDelete: Cascade)
  
  videoUrl    String?
  posterUrl   String?
  title       String?
  description String?
  
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- USER INTERACTIONS ---

model WatchList {
  id        String   @id @default(cuid())
  userId    String
  animeId   String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  anime     Anime    @relation(fields: [animeId], references: [id], onDelete: Cascade)
  
  status    String   @default("PLAN_TO_WATCH") 
  createdAt DateTime @default(now())

  @@unique([userId, animeId])
  @@index([userId])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  animeId   String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  anime     Anime    @relation(fields: [animeId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, animeId])
  @@index([userId])
}

model WatchHistory {
  id            String   @id @default(cuid())
  userId        String
  animeId       String
  episodeNumber Int
  
  progress      Int      // Seconds watched
  duration      Int      // Total duration
  isCompleted   Boolean  @default(false)
  
  lastPlayedAt  DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  anime         Anime    @relation(fields: [animeId], references: [id], onDelete: Cascade)

  @@unique([userId, animeId, episodeNumber])
}

// --- SOCIAL ---

model Comment {
  id        String   @id @default(cuid())
  userId    String
  animeId   String
  
  content   String   @db.Text
  isSpoiler Boolean  @default(false)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  anime     Anime    @relation(fields: [animeId], references: [id], onDelete: Cascade)
  
  reactions Json?    // { like: [], dislike: [] }
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([animeId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  type      NotificationType
  isRead    Boolean          @default(false)
  
  createdAt DateTime         @default(now())

  @@index([userId])
}